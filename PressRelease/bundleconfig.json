// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  // VENDOR
  {
    "outputFileName": "wwwroot/css/vendor.css",
    "inputFiles": [
      "node_modules/bootstrap/dist/css/bootstrap.css"
    ]
  },
  {
    "outputFileName": "wwwroot/css/vendor.min.css",
    "inputFiles": [
      "wwwroot/css/vendor.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/vendor.js",
    "inputFiles": [
      "node_modules/jquery/dist/jquery.js",
      "node_modules/bootstrap/dist/js/bootstrap.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": false,
      "renameLocals": false
    },
    // Optionally generate .map file
    "sourceMap": true
  },
  {
    "outputFileName": "wwwroot/js/vendor.min.js",
    "inputFiles": [
      "wwwroot/js/vendor.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": true
  },
  {
    "outputFileName": "wwwroot/js/vendor.validation.js",
    "inputFiles": [
      "node_modules/jquery-validation/dist/jquery.validate.js",
      "node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": false,
      "renameLocals": false
    },
    // Optionally generate .map file
    "sourceMap": true
  },
  {
    "outputFileName": "wwwroot/js/vendor.validation.min.js",
    "inputFiles": [
      "wwwroot/js/vendor.validation.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": true
  },

  // SITE
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": true
  }
]
