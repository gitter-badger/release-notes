@using Microsoft.AspNetCore.Identity
@using PressRelease.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
}
<header>
    <div class="page-header">
      <h1><span class="fa fa-paper-plane"></span> Press Release <small>Auto-generated release notes for GitHub repositories.</small></h1>
    </div>    
</header>

@if (SignInManager.IsSignedIn(User))
{
}
else
{
    <div class="container">
        <form asp-controller="Account" asp-action="Login" method="post" id="inlayLoginForm" class="col-md-offset-4 col-md-4">
            <button type="submit" class="btn btn-lg btn-block btn-primary btn-default">Log in with <span class="fa fa-github"></span> GitHub</button>
        </form>
    </div>
}